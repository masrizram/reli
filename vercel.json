{
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "Permissions-Policy",
                    "value": "geolocation=*, camera=*, microphone=*, payment=*, usb=*, interest-cohort=()"
                },
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "X-XSS-Protection",
                    "value": "1; mode=block"
                }
            ]
        }
    ],
    "rewrites": [
        {
            "source": "/manifest.json",
            "destination": "/public/manifest.json"
        }
    ],
    "functions": {
        "src/api/*.js": {
            "runtime": "nodejs18.x"
        }
    }
}
